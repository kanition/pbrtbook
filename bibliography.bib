@article{Ross:10.1364/JOSAA.22.002442,
  author    = {Vincent Ross and Denis Dion and Guy Potvin},
  journal   = {J. Opt. Soc. Am. A},
  keywords  = {Probability theory, stochastic processes, and statistics; Oceanic optics ; Statistical optics; Mathematical methods (general); Bidirectional reflectance distribution function; Fresnel reflection; Multiple scattering; Ray tracing; Reflection coefficient; Remote sensing},
  number    = {11},
  pages     = {2442-2453},
